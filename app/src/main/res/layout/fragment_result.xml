<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"
                android:theme="@style/Base.Theme.Card"
                app:cardBackgroundColor="#33b5e5"
                app:cardCornerRadius="3dp"
                app:cardElevation="3dp">

            <LinearLayout
                    android:id="@+id/hidden"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="10dp"
                    android:paddingLeft="17dp"
                    android:paddingRight="17dp"
                    android:paddingTop="12dp">

                <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="Name"
                        android:textAppearance="@style/TextAppearance.AppCompat.Title"
                        android:textColor="#99333333"/>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/fac"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="14PEB049"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:textColor="#aa333333"
                            android:textSize="14sp"/>

                    <TextView
                            android:id="@+id/enrolment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="GF1032"
                            android:textColor="#aa333333"
                            android:textSize="14sp"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp">

                    <TextView
                            android:id="@+id/spi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:text="SPI"
                            android:paddingTop="3dp"
                            android:textColor="#aa333333"
                            android:textSize="16sp"
                            android:textStyle="italic|bold"/>

                    <TextView
                            android:id="@+id/cpi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:padding="5dp"
                            android:text="CPI"
                            android:textColor="#aa333333"
                            android:textSize="16sp"
                            android:textStyle="italic|bold"/>
                </RelativeLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="2dp">

                    <TextView
                            android:id="@+id/credits"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:text="Credits : "
                            android:textColor="#aa444444"
                            android:textSize="12sp"
                            android:textStyle="italic"/>

                </RelativeLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler"
                android:scrollbars="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

    </LinearLayout>


    <LinearLayout
            android:id="@+id/empty"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

        <ImageView
                android:id="@+id/bin"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:src="@drawable/empty"
                android:padding="10dp"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Nothing to show here!"
                android:textSize="22sp"
                android:textStyle="italic"
                android:textColor="#999999"/>
    </LinearLayout>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:layout_anchor="@id/recycler"
            app:layout_anchorGravity="bottom|right|end"
            android:src="@drawable/ic_add"
            android:layout_margin="@dimen/fab_margin"
            app:borderWidth="0dp"
            app:elevation="5dp"
            app:layout_behavior="amu.areeb.zhcet.utils.FABBehaviour"
            android:clickable="true"/>

</android.support.design.widget.CoordinatorLayout>

